<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@drawable/main">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/l"
        android:gravity="center"
        android:text="D I A R Y"
        android:textColor="#d9d67c"
        android:textSize="60dp"
        android:textStyle="bold" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint = "#ffffff"
        android:text="E-mail"
        android:textSize="28dp"
        android:fontFamily="@font/l"
        android:textColor="#ffffff"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Password"
        android:backgroundTint = "#ffffff"
        android:textSize="28dp"
        android:fontFamily="@font/l"
        android:textColor="#ffffff"
        android:layout_marginTop="22dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Login"
        android:textSize="20dp"
        android:textColor="#d9d67c"
        android:fontFamily="@font/l"
        android:background="@drawable/newback"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        android:weightSum="5">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Don't have an account?"
            android:layout_weight="2"
            android:gravity="end"
            android:textColor="#ffffff"/>

        <TextView
            android:id="@+id/TextClick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sign up Now!"
            android:textSize="18dp"
            android:gravity="start"
            android:layout_weight="2"
            android:textColor="#d9d67c"
            android:layout_marginLeft="5dp"/>

    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="0.7dp"
        android:background="#acacac"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign in with Social Networks"
        android:gravity="center"
        android:textColor="#ffffff"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:weightSum="2">

        <Button
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="FaceBook"
            android:fontFamily="@font/l"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:background="@drawable/face"
            android:drawableLeft="@drawable/fface"
            android:layout_marginRight="10dp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:textColor="#ffffff"
            android:fontFamily="@font/l"
            android:textStyle="bold"
            android:background="@drawable/google"
            android:drawableLeft="@drawable/ouk"
            android:text="Google"
            android:layout_weight="1"/>

    </LinearLayout>

</LinearLayout>
